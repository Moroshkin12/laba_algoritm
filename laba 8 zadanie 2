#include <iostream>
using namespace std;


static long long memo[63][4];


long long countSafeStacks(int n, int countA) {
    
    if (memo[n][countA] != -1) {
        return memo[n][countA];
    }

    
    if (n == 0) {
        return memo[n][countA] = 1;
    }

    long long result = 0;

    // Добавляем контейнер B
    result += countSafeStacks(n - 1, 0);

    // Добавляем контейнер A, если возможно
    if (countA < 3) {
        result += countSafeStacks(n - 1, countA + 1);
    }

    // Сохраняем результат в мемо
    return memo[n][countA] = result;
}

int main() {
    setlocale(LC_ALL, "RU");
    // Инициализируем мемо массив значениями -1
    for (int i = 0; i < 63; i++) {
        for (int j = 0; j < 4; j++) {
            memo[i][j] = -1;
        }
    }

    int N;
    cout << "Введите количество контейнеров (N, 0 < N < 63): ";
    cin >> N;

    if (N <= 0 || N >= 63) {
        cout << "Ошибка: N должно быть в диапазоне 0 < N < 63!" << endl;
        return 1;
    }

    long long safeStacks = countSafeStacks(N, 0);

    cout << "Число безопасных стопок: " << safeStacks << endl;

    return 0;
}
